{
    "name": "Yomitomo",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "A Google Chrome extension with direct ChatGPT integration and user-installed dictionaries to allow for seamless, contextual lookups of unknown words and grammar concepts in the userâ€™s target foreign language with user-customizable flashcard generation for the app Anki",
    "action": {
        "default_title": "Yomitomo",
        "default_popup": "src/popup/index.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            }
        },
        "toggle_overlay": {
            "suggested_key": {
                "default": "Ctrl+Shift+K"
            },
            "description": "Toggle the overlay"
        }
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*",
        "http://localhost:5000/*"
    ],
    "web_accessible_resources": [
        {
        "resources": ["*.js"],
        "matches": ["<all_urls>"],
        "extension_ids": ["*"]
        }
    ]
}